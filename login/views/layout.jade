doctype html
html(lang='en')
  head
    title Welcome
    link(href='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/css/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  
  body
   .container
    .header.clearfix
     nav
      ul.nav.nav-pills.float-xs-right 
       li.nav-item
        a.nav-link(href='/contact') Contact

       if user
        li.nav-item(class=(title == 'Members' ? 'active' : ''))
         a.nav-link(href='/') Members
      
       if !user
        li.nav-item(class=(title == 'Register' ? 'active' : ''))
         a.nav-link(href='/users/register') Register
        li.nav-item(class=(title == 'Login' ? 'active' : ''))
         a.nav-link(href='/users/login') Login
       
       if user
        li.nav-item
         a.nav-link(href='/users/logout') Logout
       

     h3.text-muted Node Auth

    .container
     != messages()
     block content
    
